-- üñ•Ô∏è Aba TELA-ESTICADA
local ITALOTab = Window:MakeTab({
    Name = "üñ•Ô∏è Tela-Esticada",
    Icon = "rbxassetid://6031068426",
    PremiumOnly = false
})

local function aplicarResolucao(valor)
    getgenv().Resolution = {[".gg/scripters"] = valor}
    local Camera = workspace.CurrentCamera
    if getgenv().gg_scripters == nil then
        game:GetService("RunService").RenderStepped:Connect(function()
            Camera.CFrame = Camera.CFrame * CFrame.new(0, 0, 0, 1, 0, 0, 0, getgenv().Resolution[".gg/scripters"], 0, 0, 0, 1)
        end)
    end
    getgenv().gg_scripters = "Aori0001"
end

ITALOTab:AddButton({
    Name = "üîß Resolu√ß√£o Padr√£o",
    Callback = function()
        aplicarResolucao(1.0)
    end
})

local resolucoes = {
    ["üìè Resolu√ß√£o 0.80"] = 0.80,
    ["üìè Resolu√ß√£o 0.70"] = 0.70,
    ["üìè Resolu√ß√£o 0.65"] = 0.65,
    ["üìè Resolu√ß√£o 0.55"] = 0.55,
    ["üìè Resolu√ß√£o 0.45"] = 0.45,
    ["üìè Resolu√ß√£o 0.40"] = 0.40
}

local ordem = {"üìè Resolu√ß√£o 0.80", "üìè Resolu√ß√£o 0.70", "üìè Resolu√ß√£o 0.65", "üìè Resolu√ß√£o 0.55", "üìè Resolu√ß√£o 0.45", "üìè Resolu√ß√£o 0.40"}

for _, nome in ipairs(ordem) do
    ITALOTab:AddButton({
        Name = nome,
        Callback = function()
            aplicarResolucao(resolucoes[nome])
        end
    })
end

-- üß† Aba VISUAL
local VisualTab = Window:MakeTab({
    Name = "üß† Visual",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local espOn = false
VisualTab:AddButton({
    Name = "üëÅÔ∏è Alternar ESP (Jogadores)",
    Callback = function()
        espOn = not espOn
        local Players = game:GetService("Players")
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= Players.LocalPlayer and player.Character then
                for _, part in ipairs(player.Character:GetDescendants()) do
                    if part:IsA("BasePart") then
                        if espOn then
                            local box = Instance.new("BoxHandleAdornment")
                            box.Adornee = part
                            box.Size = part.Size
                            box.Color3 = Color3.fromRGB(0, 170, 255)
                            box.AlwaysOnTop = true
                            box.ZIndex = 5
                            box.Transparency = 0.2
                            box.Name = "ESPBox"
                            box.Parent = part
                        else
                            local old = part:FindFirstChild("ESPBox")
                            if old then old:Destroy() end
                        end
                    end
                end
            end
        end
        OrionLib:MakeNotification({
            Name = "ESP",
            Content = espOn and "ESP Ativado" or "ESP Desativado",
            Image = "rbxassetid://6031071059",
            Time = 3
        })
    end
})


VisualTab:AddButton({
    Name = "üîÆ Ativar RTX Avan√ßado",
    Callback = function()
        loadstring(game:HttpGet('https://pastebin.com/raw/kH90gD5d'))()
    end
})




-- ‚öôÔ∏è Aba SISTEMA
local SystemTab = Window:MakeTab({
    Name = "‚öôÔ∏è Sistema",
    Icon = "rbxassetid://6034509993",
    PremiumOnly = false
})

SystemTab:AddButton({
    Name = "üõ°Ô∏è Ativar Anti-AFK",
    Callback = function()
        local vu = game:GetService("VirtualUser")
        game:GetService("Players").LocalPlayer.Idled:Connect(function()
            vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
            wait(1)
            vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
        end)
        OrionLib:MakeNotification({
            Name = "Anti-AFK",
            Content = "Prote√ß√£o contra inatividade ativada.",
            Time = 4
        })
    end
})

SystemTab:AddButton({
    Name = "üåê Server Hop (novo servidor)",
    Callback = function()
        local HttpService = game:GetService("HttpService")
        local TeleportService = game:GetService("TeleportService")
        local Servers = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
        for _, v in pairs(Servers.data) do
            if v.playing < v.maxPlayers and v.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, v.id)
                break
            end
        end
    end
})

SystemTab:AddButton({
    Name = "üîÅ Reentrar no servidor",
    Callback = function()
        local TeleportService = game:GetService("TeleportService")
        local Players = game:GetService("Players")
        TeleportService:TeleportToPlaceInstance(game.PlaceId, game.JobId, Players.LocalPlayer)
    end
})
